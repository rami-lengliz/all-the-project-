# Application
NODE_ENV=development
PORT=3000

# Database (Prisma format)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rental_platform?schema=public

# Legacy TypeORM variables (for reference, will be removed)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=rental_platform

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# ML Service
ML_SERVICE_URL=http://localhost:8000

# Upload
UPLOAD_DIR=uploads

# Commission
COMMISSION_PERCENTAGE=0.10

# Throttle
THROTTLE_TTL=60
THROTTLE_LIMIT=10
THROTTLE_AUTH_LIMIT=5
THROTTLE_BOOKING_LIMIT=10

# AI (OpenAI) - for future use
OPENAI_API_KEY=
AI_MODEL=gpt-4o-mini
AI_MAX_FOLLOWUPS=1

# Cloudinary (optional) - for future use
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
